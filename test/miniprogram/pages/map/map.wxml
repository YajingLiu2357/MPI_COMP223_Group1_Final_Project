<!--pages/map/map.wxml-->
<view>
  <button type="button" id="but" bindtap="getCenterLocation"></button>
  <button type="button" bindtap="findNearest">Nearest Charging Pile</button>
  <map
  id="myMap"
  style="width:100%; height:460px;"
  latitude="{{latitude}}"
  longitude="{{longitude}}"
  markers="{{markers}}"
  covers="{{covers}}"
  polyline="{{polyline}}"
  show-location
  ></map>
  
</view>
